{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "removeComments": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "watch": true,
        "paths": {
            "*": [
                "../node_modules/*",
            ]
        }
    },
    "compileOnSave": true,
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "../node_modules/*"
    ]
}